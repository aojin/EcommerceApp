{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": false,
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "dom",
      "es2015",
      "es2017"
    ],
    "allowJs": true,
    "jsx": "react-native",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "plugins": [
      {
        "name": "typescript-plugin-react-native-web",
        "platformSpecificExtensions": [
          "web.tsx",
          "native.tsx"
        ]
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "nativewind.d.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "extends": "expo/tsconfig.base"
}
